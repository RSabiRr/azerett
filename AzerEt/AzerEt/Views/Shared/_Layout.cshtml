<script type="text/javascript">

    $(document).ready(function () {
        var MENUID = $(this).data('itemid');
        var UseRId = $('#txt').val();
        var dataa = {
            menuId: MENUID,
            userId: UseRId
        };
        var urll = '@Url.Action("Post","Wishlist")';

        // Belirli bir element yüklendiğinde çalışacak kodu burada yazın.
        var urllget = '@Url.Action("Get","Wishlist")';

        merhabaDunya();
        function merhabaDunya() {

            $.ajax({
                type: "GET",
                url: urllget, // Controller ve Action adınızı buraya ekleyin
                data: dataa,
                dataType: "json",
                success: function (response) {

                    // Sonucu HTML'e ekle
                    $("#h1").text(response);
                    $("#sonuc").html(response.length);
                },
                error: function (error) {
                    console.error("Hata oluştu.");
                    console.error(error);
                }
            });
        }

        $('.update-click').click(function () {
            var MENUID = $(this).data('itemid');
            var UseRId = $('#txt').val();
            var dataa = {
                menuId: MENUID,
                userId: UseRId
            };

            $.ajax({
                type: "POST",
                url: urll,
                contentType: "application/json; charset=utf-8",
                data: JSON.stringify(dataa),
                // data: JSON.stringify({ menuId: MenUId, userId: UseRId }),
                dataType: "json",
                success: function (response) {
                    if (response.message =="İşlem başarıyla tamamlandı.") {
                        $('a[data-itemid=' + MENUID + ']').removeClass("btn-add");
                        $('a[data-itemid=' + MENUID + ']').addClass("btn-del");
                }else{
                        $('a[data-itemid=' + MENUID + ']').removeClass("btn-del");
                        $('a[data-itemid=' + MENUID + ']').addClass("btn-add");
                }
                
                    merhabaDunya();
                },
                error: function (error) {
                    console.error("İstek gönderme hatası:", error);
                }
            });
        });


    });

</script>